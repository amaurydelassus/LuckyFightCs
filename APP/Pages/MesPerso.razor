@page "/mesperso"
@inject HttpClient Http
@using APP.Models
@inject NavigationManager Navigation
@attribute [Authorize]
<h1>Mes perso</h1>
@if (@heros == null)
{
    <p><em>Loading...</em></p>
}
else
{
    if(@heros.Count() == 0)
    {

    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>PV</th>
                    <th>Attaque</th>
                    <th>Nombre de Combats</th>
                </tr>
            </thead>
            <tbody>
                @for (var @i = 0; i < heros.Count(); i++)
                {
                    <tr>
                        <td>@heros[i].Name</td>
                        <td>@heros[i].Pv</td>
                        <td>@heros[i].Atk</td>
                        <td>@heros[i].NbFights</td>
                        <td> 
                            <button type="button" class="btn btn-lg text-light"
                                style="background-color:#AD0000;border-color: #9B0000;" @onclick="TrainNavigate(@heros[i].Id)"><span class="oi oi-heart" aria-hidden="true" href="train"></span> </button>
                            
                        </td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    }

}
@code {
    private Hero[] heros;

    protected override async Task OnInitializedAsync()
    {
        heros = await Http.GetFromJsonAsync<Hero[]>("https://localhost:5001/Hero/myheroes/1");
    }

    private async Task TrainNavigate(MouseEventArgs args, int id)
    {
        Navigation.NavigateTo("train");
    }
}